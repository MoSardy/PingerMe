<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="in.dsardy.pingerme.Register"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/mymonstawst"
                    android:id="@+id/imageView"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/llLogin"
                    android:padding="10dp"
                    android:background="@color/color_navigation_list_background"
                    android:layout_margin="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:maxLength="10"
                        android:id="@+id/editTextFirstName"
                        android:hint="Type Your Sweet Name"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorPrimary"
                        android:background="@color/colorPrimaryDark"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:alpha="0.8"
                        android:textStyle="normal|bold"
                        android:textColorHint="@color/colorPrimary" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:layout_margin="5dp"
                        android:paddingRight="5dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberSigned"
                            android:id="@+id/editTextAge"
                            android:hint="Age? ( eg: 19 )"
                            android:layout_weight="5"
                            android:textColorHint="@color/colorPrimary"
                            android:textStyle="normal|bold"
                            android:textColor="@color/colorPrimary"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:alpha="0.8" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="5"
                            android:padding="5dp">

                            <RadioButton
                                android:text="M"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButtonMale"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="normal|bold"
                                android:checked="true" />

                            <RadioButton
                                android:text="F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButtonFemale"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="normal|bold" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:weightSum="10">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/editTextMobile"
                            android:hint="Enter Mobile Number"
                            android:layout_weight="2"
                            android:textColorHint="@color/colorPrimary"
                            android:textStyle="normal|bold"
                            android:textColor="@color/colorPrimary"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:alpha="0.8" />

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/ic_menu_send"
                            android:id="@+id/imageButtonSendOTP"
                            android:layout_weight="8"
                            android:scaleType="center"
                            android:background="@null"
                            android:padding="5dp" />
                    </LinearLayout>

                    <TextView
                        android:text="Please make sure you are connected!"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewcmsg"
                        android:textStyle="normal|bold|italic"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/llotpenter"
                    android:padding="10dp"
                    android:background="@color/color_navigation_list_background"
                    android:layout_margin="10dp"
                    android:visibility="gone">

                    <TextView
                        android:text="Please wait for the SMS..."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewMsg"
                        android:padding="10dp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal|bold|italic"

                        android:elevation="1dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:weightSum="10">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/editTextOTP"
                            android:hint="Enter OTP here! "
                            android:layout_weight="2"
                            android:textColorHint="@color/colorPrimary"
                            android:textStyle="normal|bold"
                            android:textColor="@color/colorPrimary"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp" />

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/ic_menu_send"
                            android:id="@+id/imageButtonVarifyOtp"
                            android:layout_weight="8"
                            android:scaleType="center"
                            android:background="@null"
                            android:padding="5dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
